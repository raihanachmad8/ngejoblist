# Konfigurasi Aplikasi
APP_NAME=Ngejoblist
NODE_ENV=development
PORT=3000
API_PREFIX=api
DEBUG=true

# Konfigurasi Database
DATABASE_URL="postgresql://johndoe:randompassword@localhost:5432/mydb?schema=public?timezone=UTC"
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=root
DB_DATABASE=ngejoblist
DB_LOGGING=true
DB_TIMEZONE=UTC
DB_SYNCRONIZE=false

# Konfigurasi Autentikasi
JWT_ACCESS_SECRET=your_very_long_and_secure_access_secret_key
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_secret_key
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d
BCRYPT_SALT_ROUNDS=10

# Konfigurasi CORS
SECURITY_CORS_ORIGIN="http://localhost:3000,http://localhost:8080"
SECURITY_CORS_METHODS="GET,POST,PUT"
SECURITY_CORS_ALLOWED_HEADERS="Content-Type,Authorization"

# Konfigurasi Proxy
SECURITY_TRUSTED_PROXIES="127.0.0.1,10.0.0.1"

# Konfigurasi Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# Konfigurasi Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_SECURE=true

# Konfigurasi Keamanan
SECURITY_RATE_LIMIT_TTL=60
SECURITY_RATE_LIMIT_POINTS=30
SECURITY_RATE_LIMIT_DURATION=60

# Konfigurasi Helmet
SECURITY_HELMET_ENABLED=true
SECURITY_HELMET_CSP=true

# Konfigurasi Penyimpanan
STORAGE_DRIVER=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=5 # dalam MB
STORAGE_S3_BUCKET=mybucket
STORAGE_S3_ACCESS_KEY=youraccesskey
STORAGE_S3_SECRET_KEY=yoursecretkey
STORAGE_S3_REGION=us-east-1

# Konfigurasi External Services
SENTRY_DSN=your_sentry_dsn
ELASTICSEARCH_URL=http://localhost:9200

# Konfigurasi Fitur Spesifik
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true